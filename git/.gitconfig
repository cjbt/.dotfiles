# =============================================================================
# ~/.gitconfig
# =============================================================================
[user]
    name = Cecil J. Tantay
    email = cjbtantay@gmail.com

[includeIf "hasconfig:remote.*.url:git@gitlab.com:/**"]
    path = ~/.gitconfig-gitlab

[includeIf "hasconfig:remote.*.url:https://gitlab.com/**"]
    path = ~/.gitconfig-gitlab

[includeIf "hasconfig:remote.*.url:git@github.com:/**"]
    path = ~/.gitconfig-github

[includeIf "hasconfig:remote.*.url:https://github.com/**"]
    path = ~/.gitconfig-github

[core]
    editor = code --wait
    pager = delta
    excludesfile = ~/.gitignore_global
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    dark = true
    side-by-side = true
    line-numbers = true
    syntax-theme = Catppuccin Mocha
[merge]
    ff = false
[diff]
    colorMoved = default
[pull]
    rebase = false
[push]
    autoSetupRemote = true
    default = current
[fetch]
    prune = true
[rebase]
    autoStash = true
[rerere]
    enabled = true
[alias]
    # Quick shortcuts beyond the shell aliases
    undo = reset --soft HEAD~1
    amend = commit --amend --no-edit
    wip = !git add -A && git commit -m '--wip-- [skip ci]'
    nuke = !git reset --hard HEAD && git clean -fd
    branches = branch --sort=-committerdate --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]'
    lg = log --oneline --decorate --graph --all -20
[gpg]
  format = ssh
[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[commit]
  gpgsign = true
